[user]
	email = ruan.l@agrigateone.com
	name = ruansonder-r

[core]
	editor = lvim
	autocrlf = input
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = false

[merge]
	tool = lvim

[diff]
	tool = lvim

[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	lg = log --oneline --decorate --graph --all
	adog = log --all --decorate --oneline --graph
	aliases = config --get-regexp alias

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[rerere]
	enabled = true

[help]
	autocorrect = 1
